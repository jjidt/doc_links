<!DOCTYPE html>
<html>
<head>
  <title>DocLinks</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class='jumbotron'>
  <% if current_user %>
    Logged in as <%= current_user.name %>
    <p><%= link_to "Log out", logout_path, :class => "right" %></p>
  <% else %>
    <p><%= link_to "login", login_path, :class => "right" %></p>
    <p><%= link_to "Create Profile",  signup_path, :class => "right" %></p>
  <% end %>
  <h1 class="text-center">Doc Links</h1>
</div>

<%= flash[:alert] %>
<%= flash[:notice] %>



<div class="container">
  <%= yield %>
</div>

</body>
</html>
